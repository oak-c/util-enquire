	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./lib",
		"strict": true,
		"lib": ["es6", "dom"],
